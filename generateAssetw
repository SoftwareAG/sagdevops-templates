TEMPLATE_ALIAS=$1
DIRNAME=`dirname $0`

CC_ENV=${CC_ENV:-dev}
echo "Environment name: $CC_ENV"

shift
PARAMS=$*


echo "generating asset from  $TEMPLATE_ALIAS "

export COMPOSE_FILE=$DIRNAME/docker-compose.yml

# docker-compose pull cc
docker-compose up -d cc


# generate asset 
docker-compose exec -T cc bash -c "GIT_AUTHOR_EMAIL=bisser.paskalev@softwareag.com GIT_USER=$GIT_USER GIT_PUBLISH_KEY=$GIT_PUBLISH_KEY TRAVIS_PULL_REQUEST=$TRAVIS_PULL_REQUEST bash /opt/sagtools/scripts/generateAsset.sh $TEMPLATE_ALIAS" 
